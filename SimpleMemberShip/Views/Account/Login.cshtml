@using SimpleMemberShip.Models
@model Login
@{
    ViewBag.Title = "Login";
}

<h2>Enter your credentials Please</h2>
<div class="row">
    <div class="well col-md-8">
        @using (@Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="form-group row">
                <label class="col-md-3">Enter UserName</label>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control col-md-6" })
            </div>
            <div class="form-group row">
                <label class="col-md-3">Enter Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-6" })
            </div>

            <button class="btn btn-primary">Login</button>
        }
    </div>
</div>




